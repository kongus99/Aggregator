# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                         controllers.HomeController.main
GET         /gogData                  controllers.HomeController.gogData
GET         /steamData                controllers.HomeController.steamData
GET         /allData                  controllers.HomeController.allData

GET         /comparison               controllers.ComparisonController.main
GET         /comparison/data          controllers.ComparisonController.data(left : services.GameOn.GameOn, right : services.GameOn.GameOn, minimumMetric : Int)
POST        /comparison/toggle        controllers.ComparisonController.toggleMatch(leftOn : services.GameOn.GameOn, rightOn : services.GameOn.GameOn, leftId :Long, rightId : Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)
